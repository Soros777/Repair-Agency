<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Repair Agency "Max Service"</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

<!--=================================================================================
    Controller
==================================================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.epam.finalproject.repairagency.web.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


<!--============================================================
	Security filter.
	1) admin: admin commands
	2) client: client commands
	3) commons: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
=============================================================-->

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>ua.epam.finalproject.repairagency.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>manager</param-name>
            <param-value>
                listOrders appointMaster changeOrderCost changeOrderStatus topUpClientAccount showOrder
            </param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>
                createOrder payOrder giveFeedback
            </param-value>
        </init-param>
        <init-param>
            <param-name>master</param-name>
            <param-value>
                changeWorkingStatus changeDoneStatus showOrder
            </param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>noCommand</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login register logout</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

<!--============================================================
	Error page
=============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jspf/errorpage.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/jspf/errorpage.jsp</location>
    </error-page>
</web-app>